<div id="modal" class="hidden fixed z-50 top-0 left-0 right-0 bottom-0 w-full h-full overflow-hidden" role="dialog" aria-modal="true" aria-labelledby="modal-title" data-modal>
    <div data-modal class="absolute top-0 left-0 right-0 bottom-0 bg-black opacity-75"></div>
    <div data-focus-trap tabindex="0"></div>
    <div data-modal class="relative py-5 w-full h-full flex flex-col items-center justify-center">
        <div class="relative max-w-3xl bg-brown-bg-light overflow-scroll">
            <div class="flex flex-row items-center justify-between sticky top-0 bg-brown-bg-light shadow-md px-5 pt-6 pb-2">
                <h2 id="modal-title">
                    {% for response in responses %}
                    <span class="hidden" data-section="{{ response.id }}">{{ response.name }}</span>
                    {% endfor %}
                </h2>
                <button aria-label="Close modal" id="close-modal">&times;</button>
            </div>
            <div class="py-5">
                {% for response in responses %}
                <div class="hidden" aria-hidden="true" data-section="{{ response.id }}">
                    {% for page in response.pages %}
                        {% set pageFile %}./src/img/responses/page-{{ page }}.jpg{% endset %}
                        <source type="image/webp" srcset="{% resizeImage pageFile, '800x800', 'webp' %}" />
                        <img src="{% resizeImage pageFile, '800x800', 'jpeg' %}" loading="lazy" decoding="async" width="800" height="1000" alt="Page of letter written by {{ response.name }}" class="max-w-full mb-5 bg-gray-paper" />
                    {% endfor %}
                </div>
                {# TODO: transcription for aria <div class="visually-hidden"></div> #}
                {% endfor %}
            </div>
        </div>
    </div>
    <div data-focus-trap tabindex="0"></div>
</div>
