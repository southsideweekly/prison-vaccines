<div id="modal" class="hidden fixed z-50 top-0 left-0 right-0 bottom-0 w-full h-full overflow-hidden" role="dialog" aria-modal="true" data-modal>
    <div data-modal class="absolute top-0 left-0 right-0 bottom-0 bg-black opacity-75"></div>
    <div data-focus-trap tabindex="0"></div>
    <div data-modal class="relative p-5 w-full h-full flex flex-col items-center justify-center">
        <div class="relative max-w-3xl bg-white overflow-scroll">
            <div class="flex flex-row items-center justify-between sticky top-0 bg-white shadow-md px-5 pt-6 pb-2">
                <h2>
                    {% for response in responses %}
                    <span class="hidden" data-section="{{ response.id }}">{{ response.name }}</span>
                    {% endfor %}
                </h2>
                <button id="close-modal">&times;</button>
            </div>
            <div class="p-5">
                
                {% for response in responses %}
                <div class="hidden" aria-hidden="true" data-section="{{ response.id }}">
                    {% for page in response.pages %}
                        {% set pageFile %}./src/img/responses/page-{{ page }}.jpg{% endset %}
                        {% image pageFile, "page", "50vw, 100vw", "max-w-full mb-5" %}
                    {% endfor %}
                </div>
                <div class="visually-hidden">{# TODO: transcription for aria #}</div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div data-focus-trap tabindex="0"></div>
</div>
